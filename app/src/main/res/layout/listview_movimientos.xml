<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:layout_weight="20"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="250dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardCornerRadius="250dp">

            <ImageView
                android:contentDescription="Icono de Categoria"
                android:id="@+id/imageView_mov"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_money" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_weight="55"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewMovCategoria"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="start|bottom"
            android:paddingBottom="2dp"
            android:text="Comida y Bebida"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMovDescripcion"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="start|top"
            android:text="2 subcategorias"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/mov_Monto"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_weight="20"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="$55.00"

        />
</LinearLayout>